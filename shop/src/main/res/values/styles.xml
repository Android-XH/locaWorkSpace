<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>
    <style name="TextProductRMBPrice">
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:text">￥</item>
    </style>
    <style name="TextProductOldPrice">
        <item name="android:textColor">@color/black_99</item>
        <item name="android:textSize">@dimen/sp13</item>
    </style>
    <style name="TextProductNewPrice">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="TextProductItemTitle">
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="TextProductCoupon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:background">@drawable/shape_layout_red_50dp</item>
    </style>
    <style name="TextProductVolume">
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="TextProductDesc">
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="HomeMenu">
        <item name="android:drawablePadding">@dimen/view_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/black_66</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
    </style>
    <style name="SearchTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:text">请输入关键词...</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:drawableLeft">@drawable/icon_search</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/shape_layout_gray_white_50dp</item>
    </style>
    <style name="TextContentTitle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>
    <style name="PopProductTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_99</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="PopProductPrice">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PopProductPrice.RadioButton" parent="PopProductPrice">
        <item name="android:layout_marginRight">@dimen/layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:background">@drawable/tag_radio_check</item>
        <item name="android:textColor">@drawable/radio_text_select_color</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="PopProductPrice.EditText" parent="PopProductPrice">
        <item name="android:background">@drawable/shape_layout_gray_50dp</item>
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="Sort.RadioButton" parent="PopProductPrice">
        <item name="android:layout_marginRight">@dimen/layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@drawable/radio_text_select_color</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
</resources>
