<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#60ffbfb7" />
    <stroke android:color="#80ffbfb7" android:width="1dp"/>

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="50dp" />

    <padding
        android:left="@dimen/layout_padding"
        android:right="@dimen/layout_padding"
        android:top="2dp"
        android:bottom="2dp"
        />
</shape>